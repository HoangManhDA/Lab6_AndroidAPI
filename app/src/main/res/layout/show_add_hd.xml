<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape"
    android:orientation="vertical"
    android:id="@+id/linear_hoadon"
    android:layout_margin="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_margin="10dp"
            android:textSize="15dp"
            android:text="Mã KH: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            />
        <TextView
            android:layout_margin="10dp"
            android:textSize="15dp"
            android:id="@+id/tvHD_MAKH_Add"
            android:text=""
            android:hint="..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            />
        <Button
            android:id="@+id/btnHD_SelectKH_Add"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:text="+"
            android:textSize="10dp"
            android:layout_width="65dp"
            android:layout_height="40dp"/>
    </LinearLayout>

    <TextView
        android:layout_margin="10dp"
        android:textSize="15dp"
        android:id="@+id/tvHD_TENKH_Add"
        android:text="Tên Khách Hàng: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_margin="10dp"
            android:textSize="15dp"
            android:text="Mã SP: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            />
        <TextView
            android:layout_margin="10dp"
            android:textSize="15dp"
            android:id="@+id/tvHD_MASP_Add"
            android:text=""
            android:hint="..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            />
        <Button
            android:id="@+id/btnHD_SelectSP_Add"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:text="+"
            android:textSize="10dp"
            android:layout_width="65dp"
            android:layout_height="40dp"/>
    </LinearLayout>
    <TextView
        android:layout_margin="10dp"
        android:textSize="15dp"
        android:id="@+id/tvHD_TENSP_Add"
        android:text="Tên Sản Phẩm: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_margin="10dp"
            android:textSize="15dp"
            android:text="Ngày Mua: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_margin="10dp"
            android:textSize="15dp"
            android:id="@+id/tvHD_NGAYMUA_Add"
            android:text="00-00-0000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_margin="10dp"
            android:id="@+id/btnHD_SelectNGAYMUA_Add"
            android:text="Chọn Ngày"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_margin="10dp"
            android:textSize="15dp"
            android:text="Tổng Tiền: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_margin="10dp"
            android:textSize="15dp"
            android:id="@+id/tvHD_TONGTIEN_Add"
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_margin="10dp"
            android:textSize="15dp"
            android:text="VNĐ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:text="Trạng Thái: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_margin="10dp"
            android:textSize="15dp"
            android:id="@+id/tvHD_TRANGTHAI_Add"
            android:text="Chưa Thanh Toán"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btnHD_True_Add"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:text="Y"
            android:textSize="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <Button
            android:id="@+id/btnHD_False_Add"
            android:layout_marginTop="10dp"
            android:text="n"
            android:textSize="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/btnHD_Save"
            android:layout_margin="10dp"
            android:text="Save"
            android:textSize="10dp"
            android:layout_width="65dp"
            android:layout_height="40dp"/>

    </LinearLayout>
</LinearLayout>